@model INCOMETAX.Models.UserModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>user-Login </title>
    <meta charset="UTF-8">
    <meta name="viewport" Content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/Content/Resource/images/icons/favicon.ico" />

    <link rel="stylesheet" type="text/css" href="~/Content/Resource/vendor/bootstrap/css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/Content/Resource/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Resource/vendor/animate/animate.css">



    <link rel="stylesheet" type="text/css" href="~/Content/Resource/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Resource/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Resource/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Resource/main.css">
    <link href="~/Content/Resource/css/main.css" rel="stylesheet" />
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/Content/Resource/images/img-01.png" alt="IMG">
                </div>


                @using (Html.BeginForm("RegisterOfficer", "UserRegister", FormMethod.Post, new { @class = "login100 - form validate - form" }))
                {
                    <span class="login100-form-title">
                        Staff Register
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        @*	<input class="input100" type="text" name="email" placeholder="Email">*@
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "input100", type = "text", placeholder = "FirstName" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        @*	<input class="input100" type="text" name="email" placeholder="Email">*@
                        @Html.TextBoxFor(m => m.LastName, new { @class = "input100", type = "text", placeholder = "LastName" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        @*	<input class="input100" type="text" name="email" placeholder="Email">*@
                        @Html.TextBoxFor(m => m.Email, new { @class = "input100", type = "text", placeholder = "Email" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        @*	<input class="input100" type="text" name="email" placeholder="Email">*@
                        @Html.TextBoxFor(m => m.UserName, new { @class = "input100", type = "text", placeholder = "UserName" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user-circle	" aria-hidden="true"></i>
                        </span>
                    </div>


                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @*<input class="input100" type="password" name="pass" placeholder="Password">*@
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", type = "password", placeholder = "Password" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @*<input class="input100" type="password" name="pass" placeholder="Password">*@
                        @Html.PasswordFor(m => m.CPassword, new { @class = "input100", type = "password", placeholder = "Confirm Password" })


                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @*<input class="input100" type="password" name="pass" placeholder="Password">*@
                        @Html.TextBoxFor(m => m.MobileNo, new { @class = "input100", placeholder = "MobileNo" })
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-mobile" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Register
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">

                        </span>
                        <a class="txt2" href="#">

                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="../login/login">
                            Login
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>





    <script src="~/Content/Resource/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.js"></script>

    <script src="~/Content/Resource/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Resource/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/Content/Resource/vendor/select2/select2.min.js"></script>

    <script src="~/Content/Resource/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
    </script>

    <script src="~/Content/Resource/js/main.js"></script>

</body>
</html>